{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "ES6",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es6",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
    ],
    // "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./public/js",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}